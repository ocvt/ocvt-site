extends ../_base

block content
  <div id="fullCenter">
    <a href="/trips/trips.php">&lt;--Return to Main Trips Page</a>
    <br>
    <br>

    <div id="fullCenter">
      <h2>Trips I've Canceled From</h2>
      for trip in canceledTrips
        <h3 class="smallHeader">
          <a href="/trips/#{trip.id}">#{trip.name}</a>
        </h3>
        | #{trip.date}
        | &nbsp;&nbsp;&nbsp;
        <strong>Trip Type: </strong> #{trip.tripTypeName}
        | &nbsp;&nbsp;&nbsp;
        <a href="/trips/#{trip.id}">Full Details</a>
        if trip.admin
          <span style="color:navy">
            | &nbsp;|&nbsp;
            | Attendance: #{trip.attending} / #{trip.maxPeople} +
            | #{trip.forceAdded}.
            | <a href="/trips/#{trip.id}/admin">Trip Admin</a>
          </span>
        <p>#{trip.summary}</p>
    </div>
  </div>
